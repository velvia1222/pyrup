{% extends 'layout.jinja2' %}

{% block title %}ログイン{% endblock title %}

{% block content %}
<img class="logo img-responsive" src="{{request.static_url('pyrup:static/pyramid.png') }}" alt="pyramid web framework">
<p>
    <strong>ログイン</strong><br>
    {{ message }}
</p>
<form action="{{ url }}" method="post">
    <input type="hidden" name="csrf_token" value="{{ get_csrf_token() }}">
    <input type="hidden" name="next" value="{{ next_url }}">
    <div class="form-group">
        <label for="login">ユーザ名　</label>
        <input type="text" name="login" value="{{ login }}">
    </div>
    <div class="form-group">
        <label for="password">パスワード</label>
        <input type="password" name="password">
    </div>
    <div class="form-group">
        <button type="submit" name="form.submitted" value="Log In" class="btn btn-default">ログイン</button>
    </div>
</form>
{% endblock content %}
